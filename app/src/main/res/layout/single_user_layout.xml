<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/singlebg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:text="Yunwei Qiang"
        android:textColor="@color/singleItemTitle"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewAvatar"
        app:layout_constraintTop_toTopOf="@+id/imageViewAvatar" />

    <ImageView
        android:id="@+id/imageViewAvatar"
        android:layout_width="114dp"
        android:layout_height="101dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/singleuseravatar" />

    <TextView
        android:id="@+id/textViewSignleUserLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Professional"
        android:textColor="@color/singleItemTitle"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSingleUserLocation"
        app:layout_constraintStart_toStartOf="@+id/textViewUserInfo"
        app:layout_constraintTop_toTopOf="@+id/textViewSingleUserLocation" />

    <TextView
        android:id="@+id/textViewSingleUserDesc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Professional and patient. Already taught 20 people in Great Atlanta Area..."
        android:textColor="@color/singleItemDescription"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewAvatar"
        app:layout_constraintEnd_toEndOf="@+id/textViewSingleUserLocation"
        app:layout_constraintStart_toEndOf="@+id/imageViewAvatar"
        app:layout_constraintTop_toBottomOf="@+id/textViewSingleUserLocation" />

    <TextView
        android:id="@+id/textViewSingleUserLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:alpha="0.3"
        android:text="Atlanta, Georgia"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSingleUserRate" />

    <TextView
        android:id="@+id/textViewSingleUserRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate: 4.8"
        android:textColor="@color/singleItemTitle"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewUserInfo"
        app:layout_constraintEnd_toEndOf="@+id/textViewSingleUserLocation"
        app:layout_constraintTop_toTopOf="@+id/textViewUserInfo" />

</android.support.constraint.ConstraintLayout>